# Environment variables for production

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"
SUPABASE_ANON_KEY="your_anon_key"

# SMS Provider (twilio or hubtel)
SMS_PROVIDER="twilio"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_FROM_NUMBER="+1234567890"

# Hubtel Configuration (for Ghana)
HUBTEL_CLIENT_ID="your_hubtel_client_id"
HUBTEL_CLIENT_SECRET="your_hubtel_client_secret"

# Payment Provider (paystack or flutterwave)
PAYMENT_PROVIDER="paystack"

# Paystack Configuration
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key"
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key"

# Flutterwave Configuration
FLUTTERWAVE_SECRET_KEY="FLWSECK_TEST-your_flutterwave_secret_key"
FLUTTERWAVE_PUBLIC_KEY="FLWPUBK_TEST-your_flutterwave_public_key"

# App Configuration
PAYMENT_CALLBACK_URL="https://your-app.com/payment/callback"
JWT_SECRET="your_jwt_secret_key"
APP_URL="https://your-app.com"

# Node Environment
NODE_ENV="development"